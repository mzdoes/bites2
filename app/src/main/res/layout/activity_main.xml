<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mzdoes.bites2.MainActivity">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton_search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_mainRight"
        app:layout_constraintStart_toStartOf="@+id/guideline_mainLeft"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93"
        app:srcCompat="@drawable/ic_search_black_24dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </android.support.v4.view.ViewPager>

    <ImageButton
        android:id="@+id/imageButton_bookmarkList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:tint="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton_search"
        app:layout_constraintEnd_toStartOf="@+id/floatingActionButton_search"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="@+id/guideline_mainLeft"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton_search"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_collections_bookmark_black_24dp" />

    <ImageButton
        android:id="@+id/imageButton_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton_search"
        app:layout_constraintEnd_toStartOf="@+id/guideline_mainRight"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/floatingActionButton_search"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton_search"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_settings_black_24dp" />

    <ImageView
        android:id="@+id/imageView_borderTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_mainTop"
        app:layout_constraintEnd_toEndOf="@id/guideline_mainRight"
        app:layout_constraintStart_toStartOf="@+id/guideline_mainLeft"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageView_borderLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_mainLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageView_borderRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_mainRight"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageView_borderBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_mainRight"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_mainLeft"
        app:layout_constraintTop_toBottomOf="@id/guideline_mainBottom"
        app:srcCompat="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView_totalBites"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Info"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/guideline_mainBottom"
        app:layout_constraintEnd_toStartOf="@+id/imageView_logo"
        app:layout_constraintStart_toStartOf="@+id/guideline_mainLeft"
        app:layout_constraintTop_toTopOf="@id/barrier_mainTop"
        app:layout_constraintVertical_bias="0.00999999"
        tools:text='18 bites about "trump"' />

    <TextView
        android:id="@+id/textView_sourceSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Info"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/guideline_mainBottom"
        app:layout_constraintEnd_toStartOf="@+id/guideline_mainRight"
        app:layout_constraintStart_toEndOf="@+id/imageView_logo"
        app:layout_constraintTop_toTopOf="@id/barrier_mainTop"
        app:layout_constraintVertical_bias="0.00999999"
        tools:text="Sources: EN, US" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_mainRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="8dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_mainLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="8dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_mainTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="24dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_mainBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="24dp" />

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:padding="3dp"
        android:background="@color/colorPrimary"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/guideline_mainBottom"
        app:layout_constraintEnd_toStartOf="@+id/guideline_mainRight"
        app:layout_constraintStart_toStartOf="@+id/guideline_mainLeft"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00999999"
        app:srcCompat="@drawable/logo" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier_mainTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="imageView_borderTop"
        tools:layout_editor_absoluteY="567dp" />

</android.support.constraint.ConstraintLayout>
